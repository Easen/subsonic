<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE dwr PUBLIC
        "-//GetAhead Limited//DTD Direct Web Remoting 1.0//EN"
        "http://www.getahead.ltd.uk/dwr/dwr10.dtd">

<dwr>
    <allow>

        <create creator="new" javascript="nowPlayingService">
            <param name="class" value="net.sourceforge.subsonic.ajax.NowPlayingService"/>
        </create>

        <create creator="new" javascript="tagService">
            <param name="class" value="net.sourceforge.subsonic.ajax.TagService"/>
            <auth method="setTags" role="coverart"/>
        </create>

        <create creator="new" javascript="transferService">
            <param name="class" value="net.sourceforge.subsonic.ajax.TransferService"/>
            <auth method="getUploadInfo" role="upload"/>
        </create>

        <convert converter="bean" match="net.sourceforge.subsonic.ajax.UploadInfo"/>

    </allow>
</dwr>