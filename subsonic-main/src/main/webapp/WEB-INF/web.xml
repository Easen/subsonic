<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app id="subsonic" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>subsonic</display-name>

    <servlet>
        <servlet-name>subsonic</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <description>Streams the contents of a given file or directory.</description>
        <display-name>stream</display-name>
        <servlet-name>stream</servlet-name>
        <servlet-class>net.sourceforge.subsonic.servlet.StreamServlet</servlet-class>
    </servlet>

    <servlet>
        <description>Returns an m3u file with playlist containing the stream URL.</description>
        <display-name>m3u</display-name>
        <servlet-name>m3u</servlet-name>
        <servlet-class>net.sourceforge.subsonic.servlet.M3UServlet</servlet-class>
    </servlet>

    <servlet>
        <description>Downloads a single file or an entire directory structure.</description>
        <display-name>download</display-name>
        <servlet-name>download</servlet-name>
        <servlet-class>net.sourceforge.subsonic.servlet.DownloadServlet</servlet-class>
    </servlet>

    <servlet>
        <description>Finds, scales and serves cover art images</description>
        <display-name>coverart</display-name>
        <servlet-name>coverart</servlet-name>
        <servlet-class>net.sourceforge.subsonic.servlet.CoverArtServlet</servlet-class>
    </servlet>

    <servlet>
        <description>Returns an image containing a chart showing stream rate over time.</description>
        <display-name>statusChart</display-name>
        <servlet-name>statusChart</servlet-name>
        <servlet-class>net.sourceforge.subsonic.servlet.StatusChartServlet</servlet-class>
    </servlet>

    <servlet>
        <description>Returns an image containing a chart showing stream/download/upload statistics per user.</description>
        <display-name>userChart</display-name>
        <servlet-name>userChart</servlet-name>
        <servlet-class>net.sourceforge.subsonic.servlet.UserChartServlet</servlet-class>
    </servlet>

    <servlet>
        <display-name>DWR Servlet</display-name>
        <servlet-name>dwr-invoker</servlet-name>
        <servlet-class>uk.ltd.getahead.dwr.DWRServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>subsonic</servlet-name>
        <url-pattern>*.view</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>stream</servlet-name>
        <url-pattern>/stream/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>m3u</servlet-name>
        <url-pattern>/play.m3u</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>download</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>coverart</servlet-name>
        <url-pattern>/coverart</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>statusChart</servlet-name>
        <url-pattern>/statusChart</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>userChart</servlet-name>
        <url-pattern>/userChart</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>dwr-invoker</servlet-name>
        <url-pattern>/dwr/*</url-pattern>
    </servlet-mapping>

    <!--TODO: Do this with a Spring interceptor or something-->
    <filter>
        <filter-name>RequestEncodingFilter</filter-name>
        <filter-class>net.sourceforge.subsonic.filter.RequestEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>RequestEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--TODO: Replace with Spring stuff?-->
    <filter>
        <filter-name>CacheFilter</filter-name>
        <filter-class>net.sourceforge.subsonic.filter.ResponseHeaderFilter</filter-class>
        <init-param>
            <param-name>Cache-Control</param-name>
            <param-value>max-age=3600</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>NoCacheFilter</filter-name>
        <filter-class>net.sourceforge.subsonic.filter.ResponseHeaderFilter</filter-class>
        <init-param>
            <param-name>Cache-Control</param-name>
            <param-value>no-cache, post-check=0, pre-check=0</param-value>
        </init-param>
        <init-param>
            <param-name>Pragma</param-name>
            <param-value>no-cache</param-value>
        </init-param>
        <init-param>
            <param-name>Expires</param-name>
            <param-value>Thu, 01 Dec 1994 16:00:00 GMT</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CacheFilter</filter-name>
        <url-pattern>/icons/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>NoCacheFilter</filter-name>
        <url-pattern>/statusChart</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>NoCacheFilter</filter-name>
        <url-pattern>/userChart</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>org.securityfilter.filter.SecurityFilter</filter-class>
        <init-param>
            <description>Configuration file location (this is the default value)</description>
            <param-name>config</param-name>
            <param-value>/WEB-INF/securityfilter-config.xml</param-value>
        </init-param>
        <init-param>
            <description>Validate config file if set to true</description>
            <param-name>validate</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <!-- Map all requests to the SecurityFilter.  See securityfilter.config.xml for more details. -->
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>