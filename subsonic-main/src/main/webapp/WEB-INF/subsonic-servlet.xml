<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <bean id="leftController" class="net.sourceforge.subsonic.controller.LeftController">
        <property name="viewName"><value>left</value></property>
        <property name="searchService"><ref bean="searchService"/></property>
        <property name="securityService"><ref bean="securityService"/></property>
        <property name="settingsService"><ref bean="settingsService"/></property>
    </bean>
    <bean id="statusController" class="net.sourceforge.subsonic.controller.StatusController">
        <property name="viewName"><value>status</value></property>
        <property name="statusService"><ref bean="statusService"/></property>
    </bean>
    <bean id="helpController" class="net.sourceforge.subsonic.controller.HelpController">
        <property name="viewName"><value>help</value></property>
        <property name="versionService"><ref bean="versionService"/></property>
    </bean>
    <bean id="playRadioController" class="net.sourceforge.subsonic.controller.PlayRadioController">
        <property name="settingsService"><ref bean="settingsService"/></property>
    </bean>

    <!--TODO: Get rid of ServiceFactory-->
    <bean id="searchService" class="net.sourceforge.subsonic.service.ServiceFactory" factory-method="getSearchService"/>
    <bean id="securityService" class="net.sourceforge.subsonic.service.ServiceFactory" factory-method="getSecurityService"/>
    <bean id="settingsService" class="net.sourceforge.subsonic.service.ServiceFactory" factory-method="getSettingsService"/>
    <bean id="versionService" class="net.sourceforge.subsonic.service.ServiceFactory" factory-method="getVersionService"/>
    <bean id="statusService" class="net.sourceforge.subsonic.service.ServiceFactory" factory-method="getStatusService"/>

    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/help.view">helpController</prop>
                <prop key="/left.view">leftController</prop>
                <prop key="/status.view">statusController</prop>
                <prop key="/playRadio.view">playRadioController</prop>
            </props>
        </property>
    </bean>

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename"><value>net.sourceforge.subsonic.i18n.ResourceBundle</value></property>
    </bean>

    <!-- TODO: Implement locale resolver. -->
    <bean id="localeResolver"
          class="org.springframework.web.servlet.i18n.FixedLocaleResolver">
        <property name="defaultLocale"><value>no</value></property>
    </bean>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass"><value>org.springframework.web.servlet.view.JstlView</value></property>
        <property name="prefix"><value>/WEB-INF/jsp/</value></property>
        <property name="suffix"><value>.jsp</value></property>
    </bean>
</beans>