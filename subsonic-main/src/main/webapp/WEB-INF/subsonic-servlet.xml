<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <bean id="leftController" class="net.sourceforge.subsonic.controller.LeftController">
        <property name="viewName"><value>left</value></property>
        <property name="searchService"><ref bean="searchService"/></property>
        <property name="securityService"><ref bean="securityService"/></property>
        <property name="settingsService"><ref bean="settingsService"/></property>
    </bean>
    <bean id="statusController" class="net.sourceforge.subsonic.controller.StatusController">
        <property name="viewName"><value>status</value></property>
        <property name="statusService"><ref bean="statusService"/></property>
    </bean>
    <bean id="topController" class="net.sourceforge.subsonic.controller.TopController">
        <property name="viewName"><value>top</value></property>
        <property name="settingsService"><ref bean="settingsService"/></property>
        <property name="versionService"><ref bean="versionService"/></property>
    </bean>
    <bean id="helpController" class="net.sourceforge.subsonic.controller.HelpController">
        <property name="viewName"><value>help</value></property>
        <property name="versionService"><ref bean="versionService"/></property>
    </bean>
    <bean id="moreController" class="net.sourceforge.subsonic.controller.MoreController">
        <property name="viewName"><value>more</value></property>
        <property name="settingsService"><ref bean="settingsService"/></property>
        <property name="securityService"><ref bean="securityService"/></property>
    </bean>
    <bean id="uploadController" class="net.sourceforge.subsonic.controller.UploadController">
        <property name="viewName"><value>upload</value></property>
        <property name="securityService"><ref bean="securityService"/></property>
    </bean>
    <bean id="helpPopupController" class="net.sourceforge.subsonic.controller.HelpPopupController">
        <property name="viewName"><value>helpPopup</value></property>
    </bean>
    <bean id="playRadioController" class="net.sourceforge.subsonic.controller.PlayRadioController">
        <property name="settingsService"><ref bean="settingsService"/></property>
    </bean>
    <bean id="setMusicFileInfoController" class="net.sourceforge.subsonic.controller.SetMusicFileInfoController">
        <property name="musicInfoService"><ref bean="musicInfoService"/></property>
    </bean>
    <bean id="randomPlaylistController" class="net.sourceforge.subsonic.controller.RandomPlaylistController">
        <property name="viewName"><value>reload</value></property>
        <property name="playerService"><ref bean="playerService"/></property>
        <property name="reloadFrames">
            <list>
                <bean class="net.sourceforge.subsonic.controller.ReloadFrame">
                    <property name="frame" value="playlist"/>
                    <property name="view" value="playlist.jsp?"/>
                </bean>
                <bean class="net.sourceforge.subsonic.controller.ReloadFrame">
                    <property name="frame" value="main"/>
                    <property name="view" value="more.view"/>
                </bean>
            </list>
        </property>
    </bean>
    <bean id="loadPlaylistController" class="net.sourceforge.subsonic.controller.LoadPlaylistController">
        <property name="securityService"><ref bean="securityService"/></property>
        <property name="playlistService"><ref bean="playlistService"/></property>
        <property name="playerService"><ref bean="playerService"/></property>
    </bean>
    <bean id="savePlaylistController" class="net.sourceforge.subsonic.controller.SavePlaylistController">
        <property name="commandName"><value>playlist</value></property>
        <property name="commandClass"><value>net.sourceforge.subsonic.domain.Playlist</value></property>
        <property name="validator"><ref bean="savePlaylistValidator"/></property>
        <property name="formView"><value>savePlaylist</value></property>
        <property name="successView"><value>nowPlaying.jsp</value></property>
        <property name="playlistService"><ref bean="playlistService"/></property>
        <property name="playerService"><ref bean="playerService"/></property>
    </bean>

    <bean id="changeCoverArtController" class="net.sourceforge.subsonic.controller.ChangeCoverArtController">
        <property name="amazonSearchService"><ref bean="amazonSearchService"/></property>
        <property name="securityService"><ref bean="securityService"/></property>
    </bean>

    <bean id="savePlaylistValidator" class="net.sourceforge.subsonic.validator.SavePlaylistValidator">
        <property name="playlistService"><ref bean="playlistService"/></property>
    </bean>

    <!--TODO: Get rid of ServiceFactory-->
    <bean id="searchService" class="net.sourceforge.subsonic.service.ServiceFactory" factory-method="getSearchService"/>
    <bean id="securityService" class="net.sourceforge.subsonic.service.ServiceFactory" factory-method="getSecurityService"/>
    <bean id="playerService" class="net.sourceforge.subsonic.service.ServiceFactory" factory-method="getPlayerService"/>
    <bean id="playlistService" class="net.sourceforge.subsonic.service.ServiceFactory" factory-method="getPlaylistService"/>
    <bean id="settingsService" class="net.sourceforge.subsonic.service.ServiceFactory" factory-method="getSettingsService"/>
    <bean id="versionService" class="net.sourceforge.subsonic.service.ServiceFactory" factory-method="getVersionService"/>
    <bean id="statusService" class="net.sourceforge.subsonic.service.ServiceFactory" factory-method="getStatusService"/>
    <bean id="musicInfoService" class="net.sourceforge.subsonic.service.ServiceFactory" factory-method="getMusicInfoService"/>
    <bean id="amazonSearchService" class="net.sourceforge.subsonic.service.ServiceFactory" factory-method="getAmazonSearchService"/>

    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/help.view">helpController</prop>
                <prop key="/helpPopup.view">helpPopupController</prop>
                <prop key="/left.view">leftController</prop>
                <prop key="/status.view">statusController</prop>
                <prop key="/more.view">moreController</prop>
                <prop key="/upload.view">uploadController</prop>
                <prop key="/playRadio.view">playRadioController</prop>
                <prop key="/setMusicFileInfo.view">setMusicFileInfoController</prop>
                <prop key="/top.view">topController</prop>
                <prop key="/randomPlaylist.view">randomPlaylistController</prop>
                <prop key="/loadPlaylist.view">loadPlaylistController</prop>
                <prop key="/loadPlaylistConfirm.view">loadPlaylistController</prop>
                <prop key="/deletePlaylist.view">loadPlaylistController</prop>
                <prop key="/savePlaylist.view">savePlaylistController</prop>
                <prop key="/changeCoverArt.view">changeCoverArtController</prop>
            </props>
        </property>
    </bean>

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename"><value>net.sourceforge.subsonic.i18n.ResourceBundle</value></property>
    </bean>

    <!-- TODO: Implement locale resolver. -->
    <bean id="localeResolver"
          class="org.springframework.web.servlet.i18n.FixedLocaleResolver">
        <property name="defaultLocale"><value>no</value></property>
    </bean>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass"><value>org.springframework.web.servlet.view.JstlView</value></property>
        <property name="prefix"><value>/WEB-INF/jsp/</value></property>
        <property name="suffix"><value>.jsp</value></property>
    </bean>
</beans>